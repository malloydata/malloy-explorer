{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolvePackageJsonExports": false, // for @malloydata/render
    "noEmit": false,
    "outDir": "dist/types",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2019"
  },
  "include": ["src"]
}
